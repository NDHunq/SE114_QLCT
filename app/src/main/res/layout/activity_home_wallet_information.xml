                         android:text="*Start day:21/03/2024"
                         android:textStyle="italic"
                         android:textSize="17dp"
                         android:layout_marginStart="12dp"
                         android:layout_marginBottom="12dp"
                         android:layout_height="wrap_content">

                     </TextView>


                 </LinearLayout>
                 <LinearLayout
