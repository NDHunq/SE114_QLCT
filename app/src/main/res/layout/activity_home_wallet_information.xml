<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Home_Wallet_Information">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="X"
            android:textAlignment="center"
android:layout_marginStart="12dp"

            android:textColor="@color/black"
            android:textSize="37dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView
            android:layout_marginStart="12dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Wallet Information"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintStart_toEndOf="@+id/cancel"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <TextView

            android:layout_marginTop="5dp"
            android:id="@+id/save"
android:layout_marginEnd="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"


            android:gravity="bottom"
            android:text="SAVE"
            android:textColor="@color/xanhnendam"
            android:textSize="21dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"

            android:layout_marginEnd="12dp"

            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/the12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="12dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="250dp"/>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_marginStart="10dp"
                            android:layout_height="wrap_content">


                            <com.google.android.material.textfield.TextInputEditText
                                android:gravity="right"
                                android:singleLine="true"

                                android:layout_marginEnd="20dp"
                              android:layout_marginTop="40dp"
                                android:id="@+id/namewallet"
                                android:layout_marginStart="0dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vi 1"
                                android:textColor="@color/black"
                                android:textSize="35dp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></com.google.android.material.textfield.TextInputEditText>



                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ammountinf"
                android:layout_width="match_parent" android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:inputType="number"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"

                android:text="2,000,000"
                android:textColor="@color/xanhdam"
                android:textSize="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </com.google.android.material.textfield.TextInputEditText>

    <LinearLayout
android:layout_marginTop="2dp"
android:layout_gravity="center"
        android:id="@+id/currency"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="12dp"

        android:layout_marginBottom="5dp"
        android:background="@drawable/hinhchunhatvien7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/txt"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Ä‘"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

</LinearLayout>


</LinearLayout>


                    <TextView
                        android:id="@+id/start"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="*Start day:21/03/2024"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="italic">

                    </TextView>

                    <TextView
android:id="@+id/update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="*Last update day:21/03/2024"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="italic">

                    </TextView>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/delete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="30dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        android:background="@android:color/white">

        <TextView

            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DELETE THIS WALLET"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>