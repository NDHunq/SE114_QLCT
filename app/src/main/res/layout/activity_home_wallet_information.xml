                             android:layout_width="wrap_content"
                             android:text="ADD NEW MEMBER"
                                android:textSize="18dp"
                             android:layout_gravity="center"
                             android:layout_marginStart="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/xanhdam"
                             android:layout_height="wrap_content"></TextView>


                     </LinearLayout>


                 </LinearLayout>
                 <LinearLayout
                     android:background="@drawable/the12dp"
                     android:layout_width="match_parent"
                     android:orientation="vertical"
                     android:layout_marginTop="12dp"

                     android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginTop="12dp"
                                android:layout_width="wrap_content"
                                android:text="Settings"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:layout_marginStart="20dp"
                                android:layout_height="wrap_content">

                            </TextView>
                     <LinearLayout
                         android:layout_marginTop="16dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
                         <LinearLayout
                             android:layout_width="0dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:text="Enable Notification"
                                 android:textSize="19dp"

                                    android:textStyle="bold"
                                 android:textColor="@color/black"
                                 android:layout_marginStart="25dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content">

                             </TextView>
                             <TextView
                                 android:layout_width="match_parent"
                                 android:text="Get notified when there are changes to this wallet’s transaction."
                                 android:textSize="16dp"
                                 android:layout_marginStart="25dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content">

                             </TextView>

                         </LinearLayout>
                         <Switch
                             android:layout_width="50dp"
                             android:layout_marginStart="12dp"
                             android:layout_marginEnd="12dp"
                             android:layout_height="50dp">

                         </Switch>

                     </LinearLayout>
                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_marginTop="12dp"
                         android:layout_height="wrap_content">
                         <LinearLayout
                             android:layout_width="0dp"
                             android:orientation="vertical"
                             android:layout_weight="1"
                             android:layout_height="wrap_content">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:text="Archive"
                                 android:textSize="19dp"

                                 android:textStyle="bold"
                                 android:textColor="@color/black"
                                 android:layout_marginStart="25dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content">

                             </TextView>
                             <TextView
                                 android:layout_width="match_parent"
                                 android:text="Freeze this wallet and stop generating bills and recurring transactions."
                                 android:textSize="16dp"
                                 android:layout_marginStart="25dp"
                                 android:layout_weight="1"
                                 android:layout_height="wrap_content">

                             </TextView>

                         </LinearLayout>
                         <Switch
                             android:layout_width="50dp"
                             android:layout_marginStart="12dp"
                             android:layout_marginEnd="12dp"
                             android:layout_height="50dp">

                         </Switch>

                     </LinearLayout>
                     <LinearLayout
                         android:layout_marginTop="12dp"
                         android:layout_marginBottom="20dp"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content">
