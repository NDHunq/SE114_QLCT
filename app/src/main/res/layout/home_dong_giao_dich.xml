<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_marginTop="10dp"

        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="107dp"
        android:background="@drawable/the7dp">
        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="70dp">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:id="@+id/cardhinhanh"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                app:cardCornerRadius="250dp"
                app:cardBackgroundColor="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="250dp">

                    <ImageView
                        android:id="@+id/hinhanh"
                        android:layout_width="35dp"

                        android:layout_height="35dp"

                        android:layout_gravity="center">


                    </ImageView>

                </androidx.cardview.widget.CardView>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tendanhmuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/black"

                    ></TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="0dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginTop="4dp"
                        android:layout_width="20dp"
                        android:background="@drawable/walleticon"
                        android:layout_height="20dp">

                    </ImageView>
                    <TextView
                        android:id="@+id/tenvi"
                        android:textColor="@color/black"
                        android:layout_marginStart="5dp"
                        android:layout_width="match_parent"
                        android:text="Vi 1"
                        android:textSize="18dp"
                        android:layout_height="match_parent">

                    </TextView>


                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_marginEnd="12dp"
                android:layout_width="wrap_content"
android:layout_gravity="center"
                android:layout_height="50dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/ngaythang"
                        android:textAlignment="textEnd"
                        android:layout_width="match_parent"
                        android:text="12/12/2020"
                        android:textSize="14dp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/sotien"
                        android:layout_width="match_parent"
                        android:text="2.000.000 Ä‘"
                        android:textAlignment="textEnd"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:textColor="@color/xanhdam"

                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
android:background="#ADADAD"
        android:layout_height="1dp">

    </LinearLayout>

            <TextView
                android:id="@+id/GhiChu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi Chu"
android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:layout_marginStart="12dp"
                >
                
            </TextView>





    </LinearLayout>

</RelativeLayout>