<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnalysisNetIncomeFragment"
    android:background="@drawable/gred_backgound">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Net income"
            android:textSize="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="left"
            ></TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Income"
                android:textColor="#177715"
                android:textSize="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"
                android:gravity="left">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Expense"
                android:textColor="#FF0000"
                android:textSize="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="33dp"
                android:gravity="left">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1000000 đ"
                android:textColor="#177715"
                android:textSize="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentEnd="true"
                android:gravity="right">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="500000 đ"
                android:textColor="#FF0000"
                android:textSize="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="33dp"
                android:layout_alignParentEnd="true"
                android:gravity="right">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/gred_backgound">
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="500000 đ"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:gravity="right">
        </TextView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/barchart">

        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/xanhnen"
            android:text="See details"
            android:textSize="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_gravity="center"
            ></TextView>
    </LinearLayout>

</FrameLayout>