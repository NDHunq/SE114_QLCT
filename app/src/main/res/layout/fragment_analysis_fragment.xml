<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Analysis_fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/xanhnen"
            android:layout_height="55dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Analysis"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="37dp"
                android:layout_marginStart="15dp"
                android:layout_height="match_parent">

            </TextView>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginEnd="15dp"
                android:layout_gravity="center"
                android:background="@drawable/bell">

            </ImageView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gred_backgound">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/blue_calendar">

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="All time"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/black">

                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:background="@drawable/gred_backgound"
                android:backgroundTint="#D9D9D9">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Total"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_marginStart="10dp"
                    android:gravity="left">

                </TextView>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/wallet"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp">

                </ImageView>
            </LinearLayout>
            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/more"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

            </ImageView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="14dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gred_backgound"
                android:backgroundTint="#5CC2F2">
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="All"
                    android:textColor="@color/white"
                    android:textSize="18dp"

                    android:layout_marginStart="10dp"
                    android:gravity="left">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="X"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_margin="4dp"
                    android:gravity="left">

                </TextView>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Opening balance"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:gravity="left">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ending balance"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="40dp"
                android:gravity="left">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1000000 đ"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true"
                android:gravity="right">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="50000000 đ"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentEnd="true"
                android:gravity="right">
            </TextView>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/ChildFrag1"
                    android:layout_width="match_parent"
                    android:layout_height="360dp">

                </FrameLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp">

                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/ChildFrag2"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                </FrameLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp">

                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/ChildFrag3"
                    android:layout_width="match_parent"
                    android:layout_height="300dp">
                </FrameLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</FrameLayout>